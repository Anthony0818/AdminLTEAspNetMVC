	<appender name="FileAppender" type="log4net.Appender.RollingFileAppender">
		<!--<param name="File" value="bin/applicationlog" />-->
		<file value="bin/Logs/applicationlog"/>
		<maximumFileSize value="5MB" />
		<param name="DatePattern" value="_yyyy-MM-dd&quot;.log&quot;" />
		<param name="RollingStyle" value="Date" />
		<param name="StaticLogFileName" value="false" />
		<layout type="AspMVCAdminLTE.Infrastructure.LogJsonLayout, AspMVCAdminLTE"></layout>
	</appender>

	<root>
		<level value="ALL" />
		<appender-ref ref="FileAppender"/>
	</root>
</log4net>